@model IEnumerable<BEUCrtProyectoDavid.Usuario>

@{
    ViewBag.Title = "Usuarios";
}

<h2>Usuario</h2>

<p>
    @Html.ActionLink("Agregar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.uso_usu)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.uso_con)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.uso_nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.uso_cor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.uso_usu)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.uso_con)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.uso_nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.uso_cor)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.uso_id }, htmlAttributes: new { @class = "btn btn-md btn-warning span glyphicon glyphicon-pencil", @title = "Editar" }) |
            @Html.ActionLink("Ver", "Details", new { id=item.uso_id }, htmlAttributes: new { @class = "btn btn-md btn-primary span glyphicon glyphicon-search", @title = "Ver" }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.uso_id }, htmlAttributes: new { @class = "btn btn-md btn-danger span glyphicon glyphicon-trash", @title = "Borrar" })
        </td>
    </tr>
}

</table>
